@model PressYourLuck.Models.Game

<div class="row">
    <div class="col-6">
        Current Bet: $@ViewData["GameTotal"]
    </div>
    <div class="col-6 text-right">
        @if((double)(ViewData["GameTotal"]) > 0)
        { 
            <a class="btn btn-success" asp-action="TakeCoins">Take the Coins!</a>
        }
        else
        {
            <a class="btn btn-danger" asp-action="Start">Try Again!</a>
        }
    </div>
</div>
<div class="row">
    @foreach (var card in Model.CardDeck)
    {
        <div class="col-3 col-md-2" style="margin: 4px 0px 4px 0px">
            <div class="card">
                <img class="card-img-top" src="@card.GetImagePath()">
                <div class="card-body">
                    @if (card.Visible)
                    {
                        <div>@card.Value.ToString("N2")</div>

                    }
                    else
                    {
                        <a class="btn btn-primary" asp-action="Play" asp-route-indexCard="@card.TileIndex">Pick</a>
                    }
                </div>
            </div>
        </div>
    }
</div>

