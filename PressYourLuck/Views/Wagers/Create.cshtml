@model PressYourLuck.Models.Wager

@{
    ViewData["Title"] = "Game Start";
}

<h1>Welcome @ViewData["PlayerName"]!</h1>

<h4>How many coins would you like to wager?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="CoinsBet" class="control-label"></label>
                <input asp-for="CoinsBet" class="form-control" />
                <span asp-validation-for="CoinsBet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Start Playing" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
